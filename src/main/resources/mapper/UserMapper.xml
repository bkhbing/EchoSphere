<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bkhb.EchoSphere.dao.UserDao">

    <select id="getUser" resultType="com.bkhb.EchoSphere.entity.User">
        SELECT * FROM SYS_USER WHERE user_id = #{userId}
    </select>
    <select id="getUserByEmail" resultType="com.bkhb.EchoSphere.entity.User">
        SELECT * FROM SYS_USER WHERE email = #{username}
    </select>
</mapper>
